// Can replace fakeSMTP.jar
{
  "flows": {
    "localhost": {
      "filters": [
        // Allow only localhost
        {
          "type": "whitelist",
          "ips": ["127.0.0.1"]
        }
      ],
      "outputs": [
        {
          "type": "file",
          // Send store files in emails/
          "path": "./received_emails/"
        }
      ]
    }
  },
  "options": {
    "disableReverseLookup": false,
    // Do not require auth
    "authOptional": true,
    "logger": true
  }
}
  